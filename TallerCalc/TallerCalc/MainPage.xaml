<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerCalc.MainPage">

    <StackLayout Padding="10">

        <Label Text="MyCalc Version 1.2" BackgroundColor="Yellow" FontSize="Large" TextColor="Black" Padding="10"></Label>

        <StackLayout Orientation="Vertical" Padding="10">
            <Label Text="First number" FontSize="Medium"></Label>
            <Entry Placeholder="123" HorizontalOptions="FillAndExpand" x:Name="num1"></Entry>
        </StackLayout>

        <StackLayout Orientation="Vertical" Padding="10">
            <Label Text="Second number" FontSize="Medium"></Label>
            <Entry Placeholder="123" HorizontalOptions="FillAndExpand" x:Name="num2"></Entry>
        </StackLayout>

        <StackLayout Orientation="Vertical" Padding="10">
            <Picker x:Name="spin"></Picker>
        </StackLayout>

        <StackLayout Orientation="Vertical" Padding="10">
            <Button Text="Calcular" x:Name="btncalcular"></Button>
            <Label Text="0" x:Name="resul" HorizontalOptions="CenterAndExpand" FontSize="Header"></Label>
        </StackLayout>

    </StackLayout>

</ContentPage>
